<div class="container">
	<div class="card text-center">
		<div class="card-body">
			{{ form_start(form) }}
			<div class="input-group mb-3">
				<div class="input-group mb-3">
					<div class="col-8">
						<span class="input-group-text">Edificio</span>
						{{ form_widget(form.id_edificio) }}</div>
					<div class="col-4">
						<span class="input-group-text">Piso</span>
						{{ form_widget(form.id_piso) }}</div>
				</div>
				<div class="input-group mb-3">
					<div class="col-6">
						<span class="input-group-text">Aula</span>
						{{ form_widget(form.aula) }}</div>
					<div class="col-2">
						<span class="input-group-text">Capacidad</span>
						{{ form_widget(form.capacidad) }}</div>
				</div>
				<button type="submit" class="btn btn-primary">Guardar</button>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
	// filtrar Pisos por Edificio
var selEdificio = $('#aulas_id_edificio');
var selPiso = $('#aulas_id_piso');
$('#aulas_id_edificio').change(function () {
selPiso.html('');
if (selEdificio.val() > 0) {
$.ajax({
url: '/edificios/' + selEdificio.val() + '/pisos',
type: 'POST',
dataType: 'JSON'
}).done(function (pisos) {
$.each(pisos, function (key, piso) {
selPiso.append('<option value="' + piso.id + '">' + piso.piso + '</option>');
});
});
}
});
</script>
