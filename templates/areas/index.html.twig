{% extends 'base.html.twig' %}

{% block title %}Areas index{% endblock %}

{% block body %}
    <h1>Areas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Area</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for area in areas %}
            <tr>
                <td>{{ area.id }}</td>
                <td>{{ area.area }}</td>
                <td>
                    <a href="{{ path('areas_show', {'id': area.id}) }}">show</a>
                    <a href="{{ path('areas_edit', {'id': area.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('areas_new') }}">Create new</a>
{% endblock %}
