<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="Matias-A-P">
		{% set is_mobile = 'Android' in app.request.headers.get('User-Agent') %}
		<title>{% block title %}Aulas FCVS{% endblock %}</title>
		{% block stylesheets %}
		<link href="{{ asset('styles/app.css') }}" rel="stylesheet"/>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css">
		{% endblock %}
	</head>
	<body>
		{% block body %}
			{% set route_name = app.request.attributes.get('_route') %}
			<nav class="navbar navbar-expand-md navbar-light bg-light">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('app_homepage')}}"><img src="{{ asset('image/logo.png') }}" alt="" width="134" height="40"></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
						<div class="offcanvas-header">
							<h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menú</h5>
							<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
						</div>
						<div class="offcanvas-body">
							<ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
								{% if is_granted("ROLE_ADMIN") %}
								<li class="nav-item">
									<a {% if route_name == "aulas_index" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{path('aulas_index')}}">
										<i class="fas fa-university"></i>&nbsp;Aulas</a>
								</li>
								<li class="nav-item">
									<a {% if route_name == "catedras_index" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{path('catedras_index')}}">
										<i class="fas fa-graduation-cap"></i>&nbsp;Actividades</a>
								</li>
								{% endif %}
								<li class="nav-item">
									<a {% if route_name == "ocupacion_index" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{path('ocupacion_index')}}">
										<i class="far fa-calendar-alt"></i>&nbsp;Ocupación</a>
								</li>
								{% if app.user %}
								<li class="nav-item">
									<a {% if route_name == "app_logout" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{path('app_logout')}}">
										<i class="fas fa-sign-out-alt"></i>&nbsp;Salir ({{app.user.dni}})</a>
								</li>
								{% endif %}
							</ul>
						</div>
					</div>
				</div>
			</nav>
			<div class="card-transparent">
				<div class="card-header">
					<div class="row justify-content-evenly">
						{% block cardheader %}
						{% endblock %}
					</div>
				</div>
				<div class="card-body">
					{% block cardbody %}{% endblock %}
				</div>
			</div>
		{% endblock %}
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		{% endblock %}
	</body>
</html>
