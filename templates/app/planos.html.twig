{% extends 'base.html.twig' %}
{% block body %}
{{parent()}}
{% if is_mobile %}
  {% set w = 'w-75' %}
{% else %}
  {% set w = 'w-50' %}
{% endif %}
<div id="carouselPlanos" class="carousel slide {{w}}" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselPlanos" data-bs-slide-to="0" class="active" aria-current="true"
      aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselPlanos" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselPlanos" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#carouselPlanos" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <h2 class="text-center">Planta Baja</h5>
        <img src="{{ asset('image/plano-planta-baja.svg') }}" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <h2 class="text-center">Primer Piso</h5>
        <img src="{{ asset('image/plano-primer-piso.svg') }}" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <h2 class="text-center">Segundo Piso</h5>
        <img src="{{ asset('image/plano-segundo-piso.svg') }}" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <h2 class="text-center">Tercer Piso</h5>
        <img src="{{ asset('image/plano-tercer-piso.svg') }}" class="d-block w-100">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselPlanos" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselPlanos" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

{% endblock %}