{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}
{% block cardheader %}
	<div class="col-sm-8">
		<h5>Usuario</h5>
	</div>
	<div class="col-sm-2">
		<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-primary" role="button">Editar</a>
	</div>
	<div class="col-sm-2">
		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
{% block cardbody %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ user.dni }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-outline-secondary" role="button">volver</a>
{% endblock %}
