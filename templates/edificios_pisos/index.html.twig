{% extends 'base.html.twig' %}

{% block cardheader %}
	<div class="col-sm-8">
		<h5><i class="bi bi-bookshelf"></i> {{edificios_pisos[0].getIdEdificio}} <i class="bi bi-arrow-right-short"></i> Pisos</h5>
	</div>
    <div class="col-sm-4">
        <a href="{{ path('edificios_pisos_new', {'edificio': app.request.get('edificio')}) }}" class="btn btn-sm btn-outline-secondary" role="button"><i class="bi bi-plus-square"></i> Nuevo</a>
    </div>
{% endblock %}
{% block cardbody %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Piso</th>
                <th>Edificio</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for edificios_piso in edificios_pisos %}
            <tr>
                <td>{{ edificios_piso.id }}</td>
                <td>{{ edificios_piso.piso }}</td>
                <td>{{ edificios_piso.getIdEdificio }}</td>
                <td>
                    <a href="{{ path('edificios_pisos_edit', {'id': edificios_piso.id}) }}"><i class="bi bi-pencil-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">sin registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('edificios_index') }}" class="btn btn-sm btn-outline-secondary" role="button">volver</a>
{% endblock %}
