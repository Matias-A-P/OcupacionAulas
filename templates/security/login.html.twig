{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('styles/login.css') }}" rel="stylesheet"/>
{% endblock %}

{% block cardbody %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Usuario {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 fw-normal">Ingrese sus datos:</h1>
    <label for="inputEmail">Email</label>
    <input type="text" value="{{ last_username }}" name="dni" id="inputDni" class="form-control" autocomplete="dni" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Recordarme
            </label>
        </div>
    #}

    {# <button class="btn btn-lg btn-primary" type="submit">Ingresar</button> #}
    <button class="w-100 btn btn-lg btn-primary" type="submit">Ingresar</button>
</form>

