{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}

	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Usuario
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Salir</a>
			</div>
		{% endif %}

		<div class="container mt-5 mb-5 d-flex justify-content-center">
			<div class="card px-4 py-4">
				<div class="card-body">
					<h5 class="card-title mt-0 mb-4 text-center">Acceso</h5>
					<div class="d-flex flex-row">
						<div class="col-sm-12">
							<div class="form-floating form-group mb-3">
								<input type="text" value="{{ last_username }}" name="dni" id="inputDni" class="form-control" autocomplete="dni" placeholder="D.N.I." required autofocus>
                                <label for="inputDni">D.N.I.</label>
							</div>
						</div>
					</div>
					<div class="d-flex flex-row">
						<div class="col-sm-12">
							<div
								class="form-floating form-group mb-3">
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Clave" required>
                                <label for="inputPassword">Clave</label>
							</div>
						</div>
					</div>
					<div class="d-flex flex-row">
						<button class="w-100 btn btn-lg btn-primary" type="submit">
							Ingresar</button>
					</div>
				</div>
			</div>
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
	</form>

{% endblock %}
