{% extends 'base.html.twig' %}

{% block title %}Edificios index{% endblock %}

{% block body %}
    <h1>Edificios index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Edificio</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for edificio in edificios %}
            <tr>
                <td>{{ edificio.id }}</td>
                <td>{{ edificio.edificio }}</td>
                <td>
                    <a href="{{ path('edificios_show', {'id': edificio.id}) }}">show</a>
                    <a href="{{ path('edificios_edit', {'id': edificio.id}) }}">edit</a>
                </td>
            </tr>
